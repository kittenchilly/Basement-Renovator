// These are Visual Studio Code settings that should apply to this particular repository
{
  // ----------------
  // Vanilla settings
  // ----------------

  "editor.rulers": [88], // Matches the black default.
  "editor.tabSize": 2,

  // We want to always use "lf" to be consistent with all platforms.
  "files.eol": "\n",

  // Automatically remove trailing whitespace when saving a file.
  "files.trimTrailingWhitespace": true,

  // ------
  // Python
  // ------

  // Automatically run the formatter when particular files are saved.
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    // "editor.formatOnSave": true, // Disabled until BasementRenovator.py is refactored, as it is too laggy.
    "editor.tabSize": 4,
  },
  "[xml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
  },
}
